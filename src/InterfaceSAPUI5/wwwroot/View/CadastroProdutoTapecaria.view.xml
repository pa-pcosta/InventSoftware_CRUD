<mvc:View
    controllerName="ui5.Controle_De_Estoque.controller.DetalhesProdutoTapecaria"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page
		title="{i18n>tituloTelaCadastro}"
		showNavButton="true"
		navButtonPress=".aoClicarEmVoltar">

            <Panel backgroundDesign="Solid">

                	<VBox class="sapUiSmallMargin">
                        <f:SimpleForm
                            minWidth="1024"
                            editable="false"
                            layout="ResponsiveGridLayout"
                            labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4"
                            columnsL="1" columnsM="1">
                            <f:toolbar>
                                <Toolbar>
                                    <Title id="Title1" text="ID {produtoTapecaria>/id}" titleStyle="H3"/>
                                    <ToolbarSpacer />
                                    <Button type="Reject"
                                        text="{i18n>botaoCancelar}"
                                        icon="sap-icon://cancel"
                                        press="onPress"/>
                                    <Button type="Default"
                                        text="{i18n>botaoSalvar}"
                                        icon="sap-icon://save"
                                        press="onPress"/>
                                </Toolbar>
                            </f:toolbar>
                            <f:content>

                                <Label text="{i18n>labelTipo}" design="Bold"/>
                                <ComboBox id="listagemComboBox"
                                    width="9rem"
                                    items="{enums>/TipoTapecaria}"
                                    placeholder="{i18n>comboBoxPlaceholder}"
                                    change=".aoMudarValorComboBox"
                                    selectedKey = "{filtro>/tipo}">
                                    <core:Item key="{enums>key}" text="{enums>text}" />
                                </ComboBox>

                                <Label text="{i18n>labelDataEntrada}" design="Bold"/>
                                <DatePicker
                                    class="sapUiSmallMarginBottom"
                                    value="{
                                        'path': '/valueDP6',
                                        'type': 'sap.ui.model.type.Date',
                                        'formatOptions': {
                                            'pattern': 'dd/MM/y'
                                        }
                                    }"
                                />

                                <Label text="{i18n>labelTamanho}" design="Bold"/>
                                <Input
                                    description="{i18n>descricaoInputTamanho}"
                                    width="100px"
                                    fieldWidth="60%"
			                        showClearIcon="true"
                                    class="sapUiSmallMarginBottom"
                                />

                                <Label text="{i18n>labelPrecoMetroQuadrado}" design="Bold"/>
                                <Input
                                    description="EUR / 5 pieces"
                                    width="200px"
                                    fieldWidth="60px"
			                        showClearIcon="true"
                                    class="sapUiSmallMarginBottom"
                                />

                                <Label text="{i18n>labelEhEntrega}" design="Bold"/>
                                <Text text="{
                                    path: 'produtoTapecaria>/ehEntrega',
                                    formatter: '.formatter.converteBooleanParaSimOuNao'
                                }"/>
                                
                            </f:content>
                        </f:SimpleForm>
                    </VBox>
            </Panel>
	</Page>
</mvc:View>