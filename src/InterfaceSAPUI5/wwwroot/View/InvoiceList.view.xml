<mvc:View
	controllerName="ui5.walkthrough.controller.InvoiceList"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<List
		id="invoiceList"
		headerText="{i18n>tituloListagem}"
		class="sapUiResponsiveMargin"
		width="auto"
		items="{
			path : 'produtoTapecaria>/'
		}">
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>tituloListagem}" />
				<ToolbarSpacer />
				<SearchField
					width="50%"
					search=".onFilterInvoices"
				/>
			</Toolbar>
		</headerToolbar>
		<items>
			<CustomListItem>
			<HBox>
				<VBox
					width= "20%"
					alignItems="Center"
					justifyContent="Center">
					<core:Icon size="2rem" src="sap-icon://attachment-photo" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
				</VBox>
				
				<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" 
					width= "10%"
					alignItems="Center"
					justifyContent="Center">
					<ObjectIdentifier title="{produtoTapecaria>id}" id="id"/>
					<Label text="{
                            path: 'produtoTapecaria>tipo',
                            formatter: '.formatter.enumTipoTapecaria'
                        }"/>
				</VBox>

				<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
					width= "30%" 
					alignItems="Center"
					justifyContent="Center">
					<Text text="{path:'produtoTapecaria>dataEntrada',
                    	type: 'sap.ui.model.type.Date',
                        formatOptions: {
                        	style: 'short',
                        	source: {
								pattern: 'yyyy-MM-ddTHH:mm:ss.SSS'
							}
						}
					}"/>
				</VBox>

				<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
					width="30%"
					direction="Row"
					alignItems="Center"
					justifyContent="Center">
					<Text text="{
							parts: [
								'produtoTapecaria>precoMetroQuadrado',
								'produtoTapecaria>area'
							],
							formatter: '.formatter.precoTotal'
						}"/>
				</VBox>
			</HBox>
		</CustomListItem>
		</items>
	</List>
</mvc:View>
