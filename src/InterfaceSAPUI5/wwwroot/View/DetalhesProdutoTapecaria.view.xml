<mvc:View
    controllerName="ui5.Controle_De_Estoque.controller.DetalhesProdutoTapecaria"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page
		title="{i18n>tituloTelaDetalhes}"
		showNavButton="true"
		navButtonPress="">

            <Panel backgroundDesign="Solid">

                	<VBox class="sapUiSmallMargin">
                        <f:SimpleForm
                            minWidth="1024"
                            editable="false"
                            layout="ResponsiveGridLayout"
                            labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4"
                            columnsL="1" columnsM="1">
                            <f:toolbar>
                                <Toolbar>
                                    <Title id="Title1" text="ID {id}" titleStyle="H3"/>
                                    <ToolbarSpacer />
                                    <Button type="Reject"
                                        text="{i18n>botaoDeletar}"
                                        icon="sap-icon://delete"
                                        press="onPress"/>
                                    <Button type="Default"
                                        text="{i18n>botaoEditar}"
                                        icon="sap-icon://edit"
                                        press="onPress"/>
                                </Toolbar>
                            </f:toolbar>
                            <f:content>
                                <Label text="{i18n>labelTipo}" design="Bold"/>
                                <Text text="Teste"/>
                                <Label text="{i18n>labelDataEntrada}" design="Bold"/>
                                <Text text="{dataEntrada}"/>
                                <Label text="{i18n>labelTamanho}" design="Bold"/>
                                <Text text="{tamanho}"/>
                                <Label text="{i18n>labelPrecoMetroQuadrado}" design="Bold"/>
                                <Text text="{precoMetroQuadrado}"/>
                                <Label text="{i18n>labelEhEntrega}" design="Bold"/>
                                <Text text="Teste"/>
                            </f:content>
                        </f:SimpleForm>
                    </VBox>
            </Panel>
	</Page>
</mvc:View>