<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		title="{i18n>tituloTelaDetalhes}"
		showNavButton="true"
		navButtonPress="">

            <HBox width="100%"
                height="5rem">

                <HBox width="100%"
                    alignItems="Center"
                    justifyContent="Center">
                    <Title titleStyle="H2" 
                        text ="ID 0001"/>
                </HBox>

                <HBox width="15%" 
                    alignItems="Center"
                    justifyContent="SpaceAround">
                    <Button type="Reject"
                        text="{i18n>botaoDeletar}"
                        icon="sap-icon://delete"
                        press="onPress"/>

                    <Button type="Default"
                        text="{i18n>botaoEditar}"
                        icon="sap-icon://edit"
                        press="onPress"/>
                </HBox>
            </HBox>

            <Panel backgroundDesign="Solid"
                height="20rem">

                <FlexBox>
                </FlexBox>
            </Panel>
	</Page>
</mvc:View>